{
  "rootDir": "../",
  "transform": {
    "^.+\\.js$": "<rootDir>/test/jest.transform.js"
  },
  "testEnvironment": "jsdom",
  "roots": [ "<rootDir>/packages/" ],
  "testPathIgnorePatterns": [
    "unit/*-*"
  ],
  "setupFiles": [
    "<rootDir>/test/__globals__/e2e.globals.js"
  ],
  "transformIgnorePatterns": [
     "/node_modules/*",
     "/node_modules/jsdom",
     "/node_modules/react-dom",
     "/node_modules/*-*",
     "/dist/*-*"
   ]
}
